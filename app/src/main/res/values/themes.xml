<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Broker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Broke.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Broke.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Broke.Body2</item>
    </style>

    <style name="TextAppearance.Broke.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/medium_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
    </style>
    <style name="TextAppearance.Broke.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="TextAppearance.Broke.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:layout_marginBottom">@dimen/large_space</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="TextAppearance.Broke.Price" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:layout_marginBottom">@dimen/large_space</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="TextAppearance.Broke.Highlight.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/medium_space</item>
        <item name="android:layout_marginEnd">@dimen/medium_space</item>
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:layout_marginBottom">@dimen/small_space</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>